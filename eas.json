{
    "cli": {
        "version": ">= 12.0.0",
        "appVersionSource": "local"
    },
    "build": {
        "preview": {
            "android": {
                "buildType": "apk"
            }
        },
        "development": {
            "developmentClient": true,
            "distribution": "internal"
        },
        "production": {
            "android": {
                "buildType": "app-bundle",
                "env": {
                    "ANDROID_VERSION_CODE": "2"
                }
            }
        }
    },
    "submit": {
        "production": {}
    }
}